<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeHomeLayout"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/ill_text_view_id"
        android:drawableTop="@drawable/ic_settings_button"
        android:text="@string/settings_button" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/ill_text_view_id"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_map_button"
        android:text="@string/map_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ill_text_view"
        android:id="@+id/ill_text_view_id"
        android:textSize="133sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/stepsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>