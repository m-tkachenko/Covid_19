<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeStartLayout"
    android:orientation="vertical"
    tools:context=".StartActivity"
    android:background="#212121">

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:text="@string/detect_text_buttun"
        android:id="@+id/detect_button_id"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_border"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26.5dp"
        android:contentDescription="@string/description_img_start_screen"
        app:srcCompat="@mipmap/covid_start_img" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detect_button_id"
        android:background="@drawable/text_disclamer_border"
        android:text="@string/disclamer_start_screen"
        android:textColor="#ff6f00"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="-3dp"/>


</RelativeLayout>